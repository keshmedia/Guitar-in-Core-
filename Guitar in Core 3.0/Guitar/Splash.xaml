        <ScaleTransform/>
        <SkewTransform/>
        <RotateTransform/>
        <TranslateTransform/>
    </TransformGroup>
</TextBlock.RenderTransform><Run 
    Text="Copyright © 2020"/></TextBlock>
</StackPanel>
    </Grid>
</Window>
